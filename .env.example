# Discord Bot Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Discord Bot Token from Discord Developer Portal
DISCORD_TOKEN=your_bot_token_here

# Optional: Client ID for advanced features
CLIENT_ID=your_client_id_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: GitHub Integration for auto-updating data
GITHUB_TOKEN=your_github_personal_access_token_here

# Optional: Specific channel configurations
CHANNEL_ID=your_translation_channel_id_here

# Optional: Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Bot Prefix for text commands (fallback)
BOT_PREFIX=!
